<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="template-def"
           template="/WEB-INF/views/templates/defaultLayout.jsp">  
        <put-attribute name="title" value="" />  
        <put-attribute name="header" value="/WEB-INF/views/templates/defaultHeader.jsp" />  
        <put-attribute name="footer" value="/WEB-INF/views/templates/defaultFooter.jsp" /> 
        <put-attribute name="menu" value="/WEB-INF/views/templates/defaultMenu.jsp" />  
        <put-list-attribute name="javascripts">
       		<add-attribute value="/resources/js/jquery-3.3.1.min.js"/>
	        <add-attribute value="/resources/js/bootstrap/bootstrap.min.js" />
	        <add-attribute value="/resources/js/bootstrap/bootstrap.js" />        
	    </put-list-attribute>
        <put-list-attribute name="stylesheets">
	        <add-attribute value="/resources/css/bootstrap/bootstrap.min.css" />
	        <add-attribute value="/resources/css/body.css" />
	    </put-list-attribute>
    </definition>  
    <definition name="home" extends="template-def">  
        <put-attribute name="title" value="Welcome" />  
        <put-attribute name="body"
           value="/WEB-INF/views/pages/home.jsp" />  
    </definition>  
</tiles-definitions>